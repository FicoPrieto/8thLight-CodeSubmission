root = true

[*]
charset              = utf-8
end_of_line          = crlf
insert_final_newline = true

[*.{ts,js,json,test}]
indent_style             = tab
indent_size              = 2
trim_trailing_whitespace = true

[*.yaml]
indent_style             = space
indent_size              = 2
trim_trailing_whitespace = true

[*.md]
indent_style             = space
indent_size              = 2
trim_trailing_whitespace = false
